<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div>
        <table>
        <tr><td>Atrybut:</td><td><select name="data.attributemod" value= "{{data.attributemod}}">
        <option selected="selected" value="{{data.attributemod}}">{{data.attributemod}}</option>
        <option value="">-brak-</option>
        <option value="willpower">Siła Woli</option>
        <option value="fortitude">Odporność</option>
        <option value="reflexes">Refleks</option>
        <option value="reason">Rozum</option>
        <option value="intuition">Intuicja</option>
        <option value="perception">Percepcja</option>
        <option value="coolness">Opanowanie</option>
        <option value="violence">Przemoc</option>
        <option value="charisma">Charyzma</option>
        <option value="soul">Dusza</option>
        
        </select></td>
        <td>Hold: <input name="data.tokens" value= "{{data.tokens}}" class="short-input" type="number" /></td>
        </tr>
            <tr><td>Rodzaj:</td><td><select name="data.type" value= "{{data.type}}"><option selected="selected" value="{{data.type}}">{{data.type}}</option><option value="active">Aktywny</option><option value="passive">Pasywny</option></td>
                </tr>
                <tr class="editor-row"><td>Aktywator</td><td>{{editor content=data.effect target="data.effect" button=true owner=owner editable=editable}}</td></tr>
               <tr class="editor-row"><td>15+:</td><td>{{editor content=data.completesuccess target="data.completesuccess" button=true owner=owner editable=editable}}</td></tr>
    <tr class="editor-row"><td>10-14:</td><td>{{editor content=data.partialsuccess target="data.partialsuccess" button=true owner=owner editable=editable}}</td></tr>
    <tr class="editor-row"><td>0-9</td><td>{{editor content=data.failure target="data.failure" button=true owner=owner editable=editable}}</td></tr>
            
        </table>
        
           </div>
</form>